
<ChatMessage>:
    size_hint_y: None
    height: "90"
    adaptive_height: True
    size_hint_x: 0.4
    pos_hint: {"center_x": 0.8}


    MDScreen:
        
        radius: dp(25)
        MDLabel: 
            id: user_input
            font_size: root.font_size
            color: [1, 1, 1, 1]
            text: root.my_text
            valign: "middle"
            halign: "center"

<Response>:
    size_hint_y: None
    height: "90"
    adaptive_height: True
    size_hint_x: 0.4
    pos_hint: {"center_x": 0.2}


    MDScreen:
        
        radius: dp(25)
        MDLabel: 
            id: user_input
            font_size: root.font_size
            text: root.my_text
            valign: "middle"
            halign: "center"




<ChatScreen>:
    MDBoxLayout:
        orientation: "vertical"
        spacing: dp(20)

        MDTopAppBar:
            title: "Moki Bot"
            left_action_items: [["robot"]]

        MDBoxLayout:
            size_hint_y: None
            height: 40

            MDLabel: 
                text: "You can ask me any question, i am here to help"
                color: 0,0,0,0.5
                halign: "center"
                font_type: "caption"
                valign: "middle"

        MDScrollView:
            
            MDBoxLayout:
                id: chat_area
                adaptive_height: True
                orientation: "vertical"
                spacing: dp(12)
                padding: dp(20)


        MDBoxLayout:
            size_hint_y: None
            adaptive_height: True
            height: 50
            spacing: dp(10)
            padding: dp(40)

            MDTextField:
                id: message
                hint_text: "Whats on your mind?"
                mode: "round"
                multiline: True
                size_hint_x: 0.85
                max_text_length: 150
                helper_text: "message"

            MDFillRoundFlatIconButton:
                icon: "send"
                text: "send"
                on_press: root.send_message()
                on_release: root.bot_response()


